{% extends 'base.html.twig' %}

{% block title %}Drill index{% endblock %}

{% block body %}
    <h1>Drill index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for drill in drills %}
            <tr>
                <td>{{ drill.id }}</td>
                <td>{{ drill.name }}</td>
                <td>
                    <a href="{{ path('drill_show', {'id': drill.id}) }}">show</a>
                    <a href="{{ path('drill_edit', {'id': drill.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('drill_new') }}">Create new</a>
{% endblock %}
